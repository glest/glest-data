<?xml version="1.0" standalone="no"?>

<unit>
	<parameters>
		<size value="1"/>
		<height value="2"/>
		<max-hp value="600" regeneration="0"/>
		<max-ep value="0"/>
		<armor value="20"/>	
		<armor-type value="leather"/>				
		<sight value="15"/>
		<time value="100"/>	
		<multi-selection value="true"/>	
		<cellmap value="false"/>
		<levels>
			<level name="veteran" kills="8"/>
		</levels>
		<fields>
			<field value="land"/>
		</fields>	
		<properties/>
		<light enabled="false"/>
		<unit-requirements />
		<upgrade-requirements/>
		<resource-requirements>
			<resource name="wood" amount="50"/>
			<resource name="gold" amount="100"/>
			<resource name="food" amount="1"/>						
		</resource-requirements>
		<resources-stored/>
		<image path="images/unit.bmp"/>
		<image-cancel path="images/cancel.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="true">
			<sound path="sounds/ni_hao.ogg"/>
			
		</selection-sounds>
		<command-sounds enabled="true">
			<sound path="sounds/zai_jian.ogg"/>
		</command-sounds>
	</parameters>

	<skills>
	
		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="1000"/>
			<anim-speed value="30"/>
			<animation path="../ji_bing/models/bowman.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="stop"/>
			<name value="hold_stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="1000"/>
			<anim-speed value="10"/>
			<animation path="../ji_bing/models/bowman_ready.g3d"/>
			<sound enabled="false"/>
		</skill>
		<skill>
			<type value="stop"/>
			<name value="show_range_skill"/>		
			<ep-cost value="0"/>
			<speed value="200"/>
			<anim-speed value="200"/>
			<animation path="../ji_bing/models/bowman.g3d"/>
			<particles value="true">
				<particle-file path="particle_range.xml">
					<shape value="conical">
						<angle value="90"/>
					</shape>
					<radius value="9"/>
					<min-radius value="8.9"/>
					<direction x="0" y="0.1" z="0"/>
					<offset x="0" y="0" z="0"/>
				</particle-file>
				<particle-file path="particle_sight.xml">
					<shape value="conical">
						<angle value="90"/>
					</shape>
					<radius value="15"/>
					<min-radius value="14.9"/>
					<direction x="0" y="0.1" z="0"/>
					<offset x="0" y="0" z="0"/>
				</particle-file>
			</particles>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="move"/>
			<name value="move_skill"/>		
			<ep-cost value="0"/>
			<speed value="220"/>
			<anim-speed value="100"/>
			<animation path="../ji_bing/models/bowman_move.g3d"/>
			<sound enabled="true" start-time="0">
			<sound-file path="sounds/9908__snoman__gravel101.wav"/>
			<sound-file path="sounds/9909__snoman__gravel201.wav"/>
			<sound-file path="sounds/9910__snoman__gravel301.wav"/>
			<sound-file path="sounds/9911__snoman__gravel401.wav"/>
			</sound>
		</skill>

		<skill>
			<type value="move"/>
			<name value="charge_skill"/>		
			<ep-cost value="0"/>
			<speed value="220"/>
			<anim-speed value="120"/>
			<animation path="../ji_bing/models/bowman_move.g3d"/>
			
			<sound enabled="true" start-time="0">
			<sound-file path="sounds/9908__snoman__gravel101.wav"/>
			<sound-file path="sounds/9909__snoman__gravel201.wav"/>
			<sound-file path="sounds/9910__snoman__gravel301.wav"/>
			<sound-file path="sounds/9911__snoman__gravel401.wav"/>
			</sound>
		</skill>

		<skill>
			<type value="attack"/>
			<name value="attack_skill"/>		
			<ep-cost value="0"/>
			<speed value="50"/>
			<anim-speed value="50"/>
			<animation path="../ji_bing/models/bowman_fire.g3d"/>
			<sound enabled="false"/>
			<attack-strength value="130"/>
			<attack-var value="40"/>
			<attack-range value="9"/>
			<attack-type value="piercing"/>
			<attack-start-time value="0.6"/>
			<attack-fields>
				<field value="land"/>
				<field value="air"/>
			</attack-fields>
			<projectile value="true">
				<particle value="true" path="particle_proj.xml"/>
				<sound enabled="true">
					<sound-file path="/sounds/archer_attack1.wav"/>
					<sound-file path="/sounds/archer_attack2.wav"/>
					<sound-file path="/sounds/archer_attack3.wav"/>
					<sound-file path="/sounds/archer_attack4.wav"/>
				</sound>
			</projectile>
			<splash value="false"/>
		</skill>

		<skill>												
			<type value="morph"/>											
			<name value="convert"/>											
			<ep-cost value="0"/>											
			<speed value="500"/>											
			<anim-speed value="7"/>											
			<animation path="../ji_bing/models/bowman_ready.g3d"/>										
			<sound enabled="false"/> 											
		</skill>

		<skill>
			<type value="die"/>
			<name value="die_skill"/>		
			<ep-cost value="0"/>
			<speed value="60"/>
			<anim-speed value="70"/>
			<animation-random-cycle-maxcount value="1" />
			<animation path="../ji_bing/models/bowman_die.g3d"/>
			<particles value="true" start-time="0.01" end-time="0.03">
				<particle-file path="particle_splat.xml">
					<shape value="conical">
						<angle value="60"/>
					</shape>
					<radius value="1.3"/>
					<min-radius value="0.1"/>
					<direction x="2" y="0.6" z="2"/>
					<offset x="0" y="0" z="0"/>
				</particle-file>
			</particles>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/swordman_die1.wav"/>
				<sound-file path="sounds/swordman_die2.wav"/>
			</sound>			
			<fade value="false"/>
		</skill>


	</skills>
	
	<commands>
		<command>
			<type value="stop"/>
			<name value="stop"/>
			<image path="images/stop.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>

		<command>
			<type value="move"/>
			<name value="move"/>
			<image path="images/move.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
		</command>

		<command>
			<type value="attack"/>
			<name value="composite_bow"/>
			<image path="images/attack.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="charge_skill"/>
			<attack-skill value="attack_skill"/>
		</command>
		
		<command>
			<type value="attack_stopped"/>
			<name value="hold_position"/>
			<image path="images/hold.bmp"/>
			<unit-requirements/>
			<upgrade-requirements>
				<upgrade name="advanced_training"/>
			</upgrade-requirements>
			<stop-skill value="hold_stop_skill"/>
			<attack-skill value="attack_skill"/>
		</command>
		<command>
			<type value="stop"/>
			<name value="show_ranges"/>
			<image path="images/ranges.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="show_range_skill"/>
		</command>
		<command>												
			<type value="morph"/>											
			<name value="reequip_with_fire_arrows"/>											
			<image path="../huo_jian_bing/images/unit.bmp"/>											
			<unit-requirements/>											
			<upgrade-requirements>
			
				<upgrade name="advanced_training"/>
			</upgrade-requirements>
											
			<morph-skill value="convert"/>											
			<morph-unit name= "huo_jian_bing"/>											
			<discount value="0"/>											
		</command>
		
	</commands>
</unit>
