			<speed value="1000"/>
			<anim-speed value="30"/>
			<animation path="../ji_bing/models/bamboo_spear.g3d"/>
			<sound enabled="false"/>
		</skill>
		<skill>
			<type value="stop"/>
			<name value="show_range_skill"/>		
