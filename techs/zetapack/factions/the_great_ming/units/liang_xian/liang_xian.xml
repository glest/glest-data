				<particle-file path="particle_sight.xml">
					<shape value="conical">
						<angle value="90"/>
					</shape>
					<radius value="12"/>
					<min-radius value="11.9"/>
					<direction x="0" y="0.1" z="0"/>
					<offset x="0" y="0" z="0"/>
				</particle-file>
			</particles>
			<sound enabled="false"/>
		</skill>
		<skill>
			<type value="stop"/>
			<name value="hold_stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="1000"/>
			<anim-speed value="10"/>
			<animation path="../ji_bing/models/bamboo_spear_ready.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="move"/>
			<name value="move_skill"/>		
			<ep-cost value="0"/>
			<speed value="220"/>
			<anim-speed value="100"/>
			<animation path="../ji_bing/models/bamboo_spear_move.g3d"/>
			<sound enabled="true" start-time="0">
			<sound-file path="sounds/9908__snoman__gravel101.wav"/>
			<sound-file path="sounds/9909__snoman__gravel201.wav"/>
			<sound-file path="sounds/9910__snoman__gravel301.wav"/>
			<sound-file path="sounds/9911__snoman__gravel401.wav"/>
			</sound>
		</skill>

		<skill>
			<type value="move"/>
			<name value="charge_skill"/>		
			<ep-cost value="0"/>
			<speed value="220"/>
			<anim-speed value="120"/>
			<animation path="../ji_bing/models/bamboo_spear_charge.g3d"/>
			
			<sound enabled="true" start-time="0">
			<sound-file path="sounds/9908__snoman__gravel101.wav"/>
			<sound-file path="sounds/9909__snoman__gravel201.wav"/>
			<sound-file path="sounds/9910__snoman__gravel301.wav"/>
			<sound-file path="sounds/9911__snoman__gravel401.wav"/>
			</sound>
		</skill>

