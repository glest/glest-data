			<speed value="200"/>
			<anim-speed value="200"/>
			<animation path="../ji_bing/models/bamboo_spear.g3d"/>
			<particles value="true">
				<particle-file path="particle_range.xml">
					<shape value="conical">
						<angle value="90"/>
					</shape>
