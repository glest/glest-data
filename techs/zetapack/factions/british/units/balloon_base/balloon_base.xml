<?xml version="1.0" standalone="no" ?>
<unit>
	<!-- *** parameters *** -->
	<parameters>
		<size value="4" />
		<height value="4" />
		<max-hp value="6000" regeneration="0"/>
		<max-ep value="0" />
		<armor value="0" />
		<armor-type value="wood"/>		
		<sight value="5" />
		<time value="50" />
		<multi-selection value="true"/>
		<uniform-selection value="true"/>
		<cellmap value="true">
			<row value="1001"/>
			<row value="0000"/>
			<row value="0010"/>
			<row value="1001"/>
		</cellmap>
		<levels/>
		<fields>
			<field value="land" />
		</fields>
		<properties/>
		<light enabled="false" />
		<unit-requirements>
			<unit name="fort" />
			<unit name="artillery_foundry" />
		</unit-requirements>
		<upgrade-requirements />
		<resource-requirements>
			<resource name="gold" amount="220" />
			<resource name="wood" amount="80" />
			<resource name="stone" amount="140" />
		</resource-requirements>
		<resources-stored/>
		<image path="images/technodrome.bmp"/>
		<image-cancel path="images/tech_cancel.bmp"/>
		<meeting-point value="true" image-path="../artillery_foundry/images/meeting_point.bmp"/>
		<selection-sounds enabled="true">
			<sound path="sounds/tech_click.wav" />
		</selection-sounds>
		<command-sounds enabled="true">
			<sound path="sounds/tech_click.wav" />
		</command-sounds>
	</parameters>
	
	<!-- *** skills *** -->
	<skills>

		<skill>
			<name value="be_built_skill"/>		
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="300"/>
			<animation path="models/ballon_base_build.g3d"/>
			<sound enabled="false"/>
			<type value="be_built"/>
		</skill>
		
		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="100"/>
			<animation path="models/ballon_base.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="produce"/>
			<name value="produce_skill"/>		
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="300"/>
			<animation path="models/ballon_base_make.g3d"/>
			<particles value="true">
				<particle-file path="fire_particles.xml"/>
			</particles>
			<sound enabled="false"/>
		</skill>	
		
		<skill>
			<type value="upgrade"/>
			<name value="upgrade_skill"/>		
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="300"/>
			<animation path="models/ballon_base.g3d"/>
			<particles value="true">
				<particle-file path="fire_particles.xml"/>
			</particles>
			<sound enabled="false"/>
		</skill>
		
		<skill>
			<type value="die"/>
			<name value="die_skill"/>		
			<ep-cost value="0" />
			<speed value="300"/>
			<anim-speed value="300" />
			<animation path="models/ballon_base_die.g3d"/>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/tech_building_fall5.wav"/>
			</sound>			
			<fade value="false"/>
		</skill>

	</skills>

	<!-- *** commands *** -->
	<commands>
		<command>
			<type value="produce"/>
			<name value="produce_balloon"/>
			<image path="../balloon/images/dragon.bmp"/>
			<unit-requirements />
			<upgrade-requirements />
			<produce-skill value="produce_skill"/>
			<produced-unit name="balloon"/>
		</command>
	
		<command>
			<type value="upgrade"/>
			<name value="heat_air"/>
			<image path="../../upgrades/heated_air/images/heated_air.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<upgrade-skill value="upgrade_skill"/>
			<produced-upgrade name="heated_air"/>
		</command>

	</commands>
</unit>
