<?xml version="1.0" standalone="no"?>

<unit>

	<!-- *** parameters *** -->

	<parameters>
		<size value="1"/>
		<height value="2"/>
		<max-hp value="900" regeneration="1"/>
		<max-ep value="0"/>
		<armor value="20"/>
		<armor-type value="leather"/>					
		<sight value="13"/>
		<time value="40"/>	
		<multi-selection value="true"/>	
		<cellmap value="false"/>
		<levels>
			<level name="respected" kills="6"/>
		</levels>
		<fields>
			<field value="air"/>
		</fields>	
		<properties/>
		<light enabled="false"/>
		<unit-requirements/>
		<upgrade-requirements>
			<upgrade name="worker_flight"/>
		</upgrade-requirements>
		<resource-requirements>
			<resource name="gold" amount="150"/>
			<resource name="wood" amount="50"/>
		</resource-requirements>
		<resources-stored/>
		<image path="images/flying_worker.bmp"/>
		<image-cancel path="../cancel.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="true">
			<sound path="../land_worker/sounds/land_worker_select.wav"/>					</selection-sounds>
		<command-sounds enabled="true">
			<sound path="../land_worker/sounds/land_worker_ack.wav"/>
		</command-sounds>
	</parameters>


	<!-- *** skills *** -->

	<skills>
	
		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="1000"/>
			<anim-speed value="55"/>
			<animation path="models/flying_worker_standing.g3d"/>
			<sound enabled="false"/>
		</skill>
		
		<skill>
			<type value="stop"/>
			<name value="stop_loaded_skill"/>		
			<ep-cost value="0"/>
			<speed value="75"/>
			<anim-speed value="70"/>
			<animation path="models/flying_worker_harvesting.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="move"/>
			<name value="move_skill"/>		
			<ep-cost value="0"/>
			<speed value="320"/>
			<anim-speed value="90"/>
			<animation path="models/flying_worker_walking.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="move"/>
			<name value="collect_skill"/>		
			<ep-cost value="0"/>
			<speed value="320"/>
			<anim-speed value="90"/>
			<animation path="models/flying_worker_walking_harvest.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="move"/>
			<name value="move_loaded_skill"/>		
			<ep-cost value="0"/>
			<speed value="320"/>
			<anim-speed value="90"/>
			<animation path="models/flying_worker_walking_loaded.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="repair"/>
			<name value="repair_skill"/>		
			<ep-cost value="0"/>
			<speed value="30"/>
			<anim-speed value="100"/>
			<animation path="models/flying_worker_attacking.g3d"/>
			<sound enabled="true" start-time="0.5">
				<sound-file path="../land_worker/sounds/land_worker_build.wav"/>
			</sound>
		</skill>

		<skill>
			<type value="attack"/>
			<name value="attack_skill"/>		
			<ep-cost value="0"/>
			<speed value="70"/>
			<anim-speed value="70"/>
			<animation path="models/flying_worker_attacking.g3d"/>
			<sound enabled="true" start-time="0.2">
				<sound-file path="sounds/stone_throw.ogg"/>
			</sound> 
			<attack-strenght value="150"/>
			<attack-var value="25"/>
			<attack-range value="7"/>
			<attack-type value="arrow"/>	
			<attack-fields>
				<field value="land"/>
				<field value="air"/>
			</attack-fields>
			<attack-start-time value="0.5"/>
			<projectile value="true">
				<particle value="true" path="particle_proj.xml"/>
							<sound enabled="true" start-time="0">
				<sound-file path="sounds/stone_hit.wav"/>
			</sound>
			</projectile>
			<splash value="true">
				<radius value="1"/>
				<damage-all value="true"/>
				<particle value="true" path="particle_splash.xml"/>
			</splash>
		</skill>
		
		<skill>
			<type value="harvest"/>
			<name value="mine_skill"/>
			<ep-cost value="0"/>
			<speed value="150"/>
			<anim-speed value="60"/>
			<animation path="models/flying_worker_harvesting.g3d"/>
			<sound enabled="false"/>
		</skill>
		
		<skill>
			<type value="morph"/>
			<name value="morph_skill"/>		
			<ep-cost value="0"/>
			<speed value="1000"/>
			<anim-speed value="100"/>
			<animation path="models/flying_worker_walking.g3d"/>
			<sound enabled="false"/>
		</skill>	

		
		<skill>
			<type value="die"/>
			<name value="die_skill"/>		
			<ep-cost value="0"/>
			<speed value="90"/>
			<anim-speed value="90"/>
			<animation path="models/flying_worker_dying.g3d"/>
			<sound enabled="true" start-time="0">
				<sound-file path="../land_worker/sounds/land_worker_die.wav"/>
			</sound>			
			<fade value="false"/>
		</skill>						

	</skills>

	<!-- *** commands *** -->
	
	<commands>
		
		<command>
			<type value= "stop"/>
			<name value="stop"/>
			<image path="../stop.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>

		<command>
			<type value= "move"/>
			<name value="move"/>
			<image path="../move.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
		</command>

		<command>
			<type value="attack"/>
			<name value="attack"/>
			<image path="images/flying_worker_attack.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<attack-skill value="attack_skill"/>
		</command>

		<command>
			<type value="harvest"/>
			<name value="mine"/>
			<image path="../land_worker/images/land_worker_mine.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="collect_skill"/>
			<harvest-skill value="mine_skill"/>
			<stop-loaded-skill value="stop_loaded_skill"/>
			<move-loaded-skill value="move_loaded_skill"/>
			<harvested-resources>
				<resource name="gold"/>	
				<resource name="stone"/>								<resource name="wood"/>
			</harvested-resources>
			<max-load value="25"/>
			<hits-per-unit value="1"/>				
		</command>

		<command>
			<type value="repair"/>
			<name value="repair"/>
			<image path="../land_worker/images/land_worker_repair.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<repair-skill value="repair_skill"/>
			<repaired-units>	
				<unit name="air_container"/>
				<unit name="armed_blimp"/>
				<unit name="flying_worker"/>
			</repaired-units>		
		</command>	

		<command>
			<type value="morph"/>
			<name value="land"/>
			<image path="../land_worker/images/land_worker.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<morph-skill value="morph_skill"/>
			<morph-unit name= "land_worker"/>
			<discount value="60"/>
		</command>
	</commands>
</unit>
