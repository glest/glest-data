<?xml version="1.0" standalone="no"?>

<unit>
	<parameters>
		<size value="2"/>
		<height value="1"/>
		<max-hp value="2000" regeneration="1"/>
		<max-ep value="0"/>
		<armor value="20"/>	
		<armor-type value="leather"/>
		<sight value="13"/>
		<time value="150"/>	
		<multi-selection value="true"/>	
		<cellmap value="false"/>
		<levels>
			<level name="heavily" kills="20"/>
		</levels>
		<fields>
			<field value="air"/>
		</fields>	
		<properties/>
		<damage-particles value="true">
			<particle-file path="smoke_particles.xml"/>
		</damage-particles>
		<light enabled="false"/>
		<unit-requirements>
		</unit-requirements>
		<upgrade-requirements>
		</upgrade-requirements>
		<resource-requirements>
			<resource name="gold" amount="250"/>
			<resource name="wood" amount="300"/>	
			<resource name="food" amount="1"/>
		</resource-requirements>
		<resources-stored/>
		<image path="images/armed_blimp.bmp"/>
		<image-cancel path="../cancel.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="true">
			<sound path="sounds/armed_blimp_select.wav"/>
		</selection-sounds>
		<command-sounds enabled="true">
			<sound path="sounds/armed_blimp_ack.wav"/>		
		</command-sounds>
	</parameters>

	<skills>
		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="1000"/>
			<anim-speed value="20"/>
			<animation path="models/armed_blimp_standing.g3d"/>
			<sound enabled="false"/>
		</skill>
		
		<skill>
			<type value="move"/>
			<name value="move_skill"/>		
			<ep-cost value="0"/>
			<speed value="140"/>
			<anim-speed value="80"/>
			<animation path="models/armed_blimp_walking.g3d"/>
			<particles value="true">
				<particle-file path="motor_particles.xml"/>
			</particles>
			<sound enabled="false"/>
		</skill>
                
		<skill>
			<type value="attack"/>
			<name value="attack_skill"/>		
			<ep-cost value="0"/>
			<speed value="110"/>
			<anim-speed value="110"/>
			<animation path="models/armed_blimp_attacking.g3d"/>
			<sound enabled="true" start-time="0.1">
				<sound-file path="sounds/armed_blimp_attack.wav"/>
			</sound>
			<attack-strenght value="200"/>
			<attack-var value="50"/>
			<attack-range value="7"/>
			<attack-type value="energy"/>
			<attack-start-time value="0.2"/>
			<attack-fields>
				<field value="land"/>
				<field value="air"/>
			</attack-fields>
			<projectile value="true">
				<particle value="true" path="particle_proj.xml"/>
				<sound enabled="false"/>
			</projectile>
			<splash value="true">
				<radius value="1"/>
				<damage-all value="true"/>
				<particle value="true" path="particle_splash.xml"/>
			</splash>
		</skill>	

		<skill>
			<type value="die"/>
			<name value="die_skill"/>		
			<ep-cost value="0"/>
			<speed value="50"/>
			<anim-speed value="50"/>
			<animation path="models/armed_blimp_dying.g3d"/>
			<particles value="true">			
				<particle-file path="die_particles.xml"/>
				<particle-file path="xplode_particles.xml"/>
			</particles>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/armed_blimp_die.wav"/>
				<sound-file path="sounds/armed_blimp_die2.wav"/>
				<sound-file path="sounds/armed_blimp_die3.wav"/>	
			</sound>
                <fade value="false"/>
		</skill>

	</skills>
	
	<commands>
		
           <command>
			<type value="stop"/>
			<name value="stop"/>
			<image path="../stop.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>
                
		<command>
			<type value="move"/>
			<name value="move"/>
			<image path="../move.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
		</command>

        
           <command>
			<type value="attack"/>
			<name value="missile"/>
			<image path="images/armed_blimp_attack.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<attack-skill value="attack_skill"/>
		</command>
              

           <command>
			<type value="attack_stopped"/>
			<name value="hold_position"/>
			<image path="../hold.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
			<attack-skill value="attack_skill"/>
		</command>

	</commands>
</unit>
