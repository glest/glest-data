<?xml version="1.0" standalone="no"?>

<unit>
	<parameters>
		<size value="1"/>
		<height value="2"/>
		<max-hp value="700" regeneration="1"/>
		<max-ep value="0"/>
		<armor value="20"/>	
		<armor-type value="leather"/>				
		<sight value="13"/>
		<time value="50"/>	
		<multi-selection value="true"/>	
		<cellmap value="false"/>
		<levels>
			<level name="precise" kills="6"/>
		</levels>
		<fields>
			<field value="land"/>
		</fields>	
		<properties/>
		<light enabled="false"/>
		<unit-requirements/>
		<upgrade-requirements/>
		<resource-requirements>
			<resource name="wood" amount="60"/>
			<resource name="gold" amount="100"/>
			<resource name="food" amount="1"/>
		</resource-requirements>
		<resources-stored/>
		<image path="images/range_archer.bmp"/>
		<image-cancel path="../cancel.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="true">
			<sound path="sounds/range_archer_select.wav"/>
		</selection-sounds>
		<command-sounds enabled="true">
			<sound path="sounds/range_archer_ack.wav"/>
		</command-sounds>
	</parameters>

	<skills>
	
		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="1000"/>
			<anim-speed value="45"/>
			<animation path="models/range_archer_standing.g3d"/>
			<sound enabled="false"/>
		</skill>
		
		<skill>
			<type value="move"/>
			<name value="move_skill"/>		
			<ep-cost value="0"/>
			<speed value="220"/>
			<anim-speed value="90"/>
			<animation path="models/range_archer_walking.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="attack"/>
			<name value="attack_skill"/>		
			<ep-cost value="0"/>
			<speed value="50"/>
			<anim-speed value="50"/>
			<animation path="models/range_archer_attacking.g3d"/>
			<sound enabled="true" start-time="0.5">
				<sound-file path="sounds/range_archer_attack.wav"/>
			</sound>
			<attack-strenght value="90"/>
			<attack-var value="25"/>
			<attack-range value="11"/>
			<attack-type value="piercing"/>
			<attack-start-time value="0.5"/>
			<attack-fields>
				<field value="land"/>
				<field value="air"/>
			</attack-fields>
			<projectile value="true">
				<particle value="true" path="particle_proj.xml"/>
				<sound enabled="false"/>
			</projectile>
			<splash value="false"/>
		</skill>

		<skill>
			<type value="morph"/>
			<name value="morph_skill"/>		
			<ep-cost value="0"/>
			<speed value="500"/>
			<anim-speed value="100"/>
			<animation path="models/range_archer_standing.g3d"/>
			<sound enabled="false"/>
		</skill>
		
		<skill>
			<type value="die"/>
			<name value="die_skill"/>		
			<ep-cost value="0"/>
			<speed value="60"/>
			<anim-speed value="60"/>
			<animation path="models/range_archer_dying.g3d"/>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/range_archer_die.wav"/>
			</sound>			
			<fade value="false"/>
		</skill>


	</skills>

	<!-- *** commands *** -->
	
	<commands>
		
		<command>
			<type value= "stop"/>
			<name value="stop"/>
			<image path="../stop.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>

		<command>
			<type value="move"/>
			<name value="move"/>
			<image path="../move.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
		</command>

		<command>
			<type value="attack"/>
			<name value="attack"/>
			<image path="images/range_archer_attack.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<attack-skill value="attack_skill"/>
		</command>
		
		<command>
			<type value="attack_stopped"/>
			<name value="hold_position"/>
			<image path="../hold.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
			<attack-skill value="attack_skill"/>
		</command>

		<command>
			<type value="morph"/>
			<name value="get_power"/>
			<image path="../power_archer/images/power_archer.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<morph-skill value="morph_skill"/>
			<morph-unit name= "power_archer"/>
			<discount value="0"/>
		</command>
	</commands>
</unit>
