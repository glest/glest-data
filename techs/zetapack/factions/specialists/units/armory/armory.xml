<?xml version="1.0" standalone="no" ?>
<unit>
	<!-- *** parameters *** -->
	<parameters>
		<size value="4" />
		<height value="4" />
		<max-hp value="6000" regeneration="1"/>
		<max-ep value="0" />
		<armor value="10" />
		<armor-type value="wood"/>		
		<sight value="13" />
		<time value="110" />
		<multi-selection value="false" />
		<cellmap value="true">
			<row value="1001"/>
			<row value="0000"/>
			<row value="1001"/>
			<row value="1001"/>
		</cellmap>
		<levels/>
		<fields>
			<field value="land" />
		</fields>
		<properties>
			<property value="burnable"/>
		</properties>
		<light enabled="false" />
		<unit-requirements>
			<unit name="battle_factory" />
		</unit-requirements>
		<upgrade-requirements />
		<resource-requirements>
			<resource name="wood" amount="200" />
			<resource name="stone" amount="200" />
		</resource-requirements>
		<resources-stored/>
		<image path="images/armory.bmp"/>
		<image-cancel path="../cancel.bmp"/>
		<meeting-point value="true" image-path="../meeting_point.bmp"/>
		<selection-sounds enabled="false"/>
		<command-sounds enabled="false"/>
	</parameters>
	
	<!-- *** skills *** -->
	<skills>

		<skill>
			<name value="be_built_skill"/>		
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="300"/>
			<animation path="models/armory_build.g3d"/>
			<sound enabled="false"/>
			<type value="be_built"/>
		</skill>
		
		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="100"/>
			<animation path="models/armory_stop.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="produce"/>
			<name value="produce_skill"/>		
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="300"/>
			<animation path="models/armory_stop.g3d"/>
			<sound enabled="false"/>
		</skill>	
		
		<skill>
			<type value="upgrade"/>
			<name value="upgrade_skill"/>		
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="300"/>
			<animation path="models/armory_stop.g3d"/>
			<sound enabled="false"/>
		</skill>
		
		<skill>
			<type value="die"/>
			<name value="die_skill"/>		
			<ep-cost value="0" />
			<speed value="300"/>
			<anim-speed value="300" />
			<animation path="models/armory_die.g3d"/>
			<particles value="true">
				<particle-file path="smoke_particles.xml"/>
				<particle-file path="glow_particles.xml"/>
			</particles>
			<sound enabled="true" start-time="0">
				<sound-file path="../building_die.wav"/>
			</sound>			
			<fade value="false"/>
		</skill>

	</skills>

	<!-- *** commands *** -->
	<commands>
		<command>
			<type value="produce"/>
			<name value="produce_moose_rider" />
			<image path="../moose_rider/images/moose_rider.bmp" />
			<unit-requirements />
			<upgrade-requirements />
			<produce-skill value="produce_skill"/>
			<produced-unit name="moose_rider"/>
		</command>


		<command>
			<type value="upgrade"/>
			<name value="obtain_precision" />
			<image path="../../upgrades/precision/images/precision.bmp" />
			<unit-requirements/>
			<upgrade-requirements />
			<upgrade-skill value="upgrade_skill"/>
			<produced-upgrade name="precision"/>
		</command>

		<command>
			<type value="upgrade"/>
			<name value="research_power" />
			<image path="../../upgrades/power/images/power.bmp" />
			<unit-requirements/>
			<upgrade-requirements />
			<upgrade-skill value="upgrade_skill"/>
			<produced-upgrade name="power"/>
		</command>

	</commands>
</unit>
