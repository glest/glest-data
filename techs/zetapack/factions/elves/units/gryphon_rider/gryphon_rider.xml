		<sight value="20"/>
		<time value="250"/>
		<multi-selection value="true"/>
		<uniform-selection value="true"/>
		<cellmap value="false"/>
		<levels>
			<level name="master" kills="4"/>
			<level name="expert" kills="10"/>
		</levels>
		<fields>
			<field value="air"/>
		</fields>
		<properties/>
		<light enabled="false"/>
		<unit-requirements/>
		<upgrade-requirements>
			<upgrade name="taming_song"/>
