<?xml version="1.0" standalone="no"?>

<unit>
	<parameters>
		<size value="2"/>
		<height value="1"/>
		<max-hp value="1300" regeneration="3"/>
		<max-ep value="30" regeneration="1"/>
		<armor value="20"/>
		<armor-type value="leather"/>
		<sight value="20"/>
		<time value="250"/>
		<multi-selection value="true"/>
		<cellmap value="false"/>
		<levels>
			<level name="tame" kills="4"/>
			<level name="loyal" kills="10"/>
		</levels>
		<fields>
			<field value="air"/>
		</fields>
		<properties/>
		<light enabled="false"/>
		<unit-requirements/>
		<upgrade-requirements/>
		<resource-requirements>
			<resource name="gold" amount="200"/>
			<resource name="grace" amount="7"/>
			<resource name="wood" amount="150"/>
			<resource name="stone" amount="150"/>
		</resource-requirements>
		<resources-stored/>
		<image path="images/gryphon.bmp"/>
		<image-cancel path="../tree_of_life/images/stop.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="true">
			<sound path="sounds/eagle_select1.wav"/>
			<sound path="sounds/eagle_select2.wav"/>
		</selection-sounds>
		<command-sounds enabled="true">
			<sound path="sounds/eagle_ack1.wav"/>
			<sound path="sounds/eagle_ack2.wav"/>
		</command-sounds>

	</parameters>


	<!-- *** skills *** -->

	<skills>

		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>
			<ep-cost value="0"/>
			<speed value="1000"/>
			<anim-speed value="75"/>
			<animation path="models/gryphon_idle.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="move"/>
			<name value="move_skill"/>
			<ep-cost value="0"/>
			<speed value="400"/>
			<anim-speed value="75"/>
			<animation path="models/gryphon_flying.g3d"/>
			<sound enabled="true" start-time="0">
			<sound-file path="sounds/eagle_fly.wav"/>
			</sound>
		</skill>

		<skill>
			<type value="attack"/>
			<name value="attack_skill"/>
			<ep-cost value="0"/>
			<speed value="100"/>
			<anim-speed value="100"/>
			<animation path="models/gryphon_attacking.g3d"/>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/eagle_attack1.wav"/>
			</sound>
			<attack-strength value="200"/>
			<attack-var value="180"/>
			<attack-range value="1"/>
			<attack-type value="piercing"/>
			<attack-fields>
				<field value="air"/>
			</attack-fields>
			<attack-start-time value="0.3"/>
			<projectile value="false"/>
			<splash value="false"/>
		</skill>

		<skill>
			<type value="attack"/>
			<name value="attack_ground_skill"/>
			<ep-cost value="10"/>
			<speed value="40"/>
			<anim-speed value="40"/>
			<animation path="models/gryphon_seige.g3d"/>
			<sound enabled="true" start-time="0.01">
				<sound-file path="sounds/ground_attack1.wav"/>
				<sound-file path="sounds/ground_attack2.wav"/>
				<sound-file path="sounds/ground_attack3.wav"/>
				<sound-file path="sounds/ground_attack4.wav"/>
			</sound>
			<attack-strenght value="450"/>
			<attack-var value="70"/>
			<attack-range value="7"/>
			<attack-type value="impact"/>
			<attack-fields>
				<field value="land"/>
			</attack-fields>
			<attack-start-time value="0.7"/>
			<projectile value="true">
				<particle value="true" path="particle_proj.xml"/>
				<sound enabled="true">
					<sound-file path="sounds/eagle_hit4.wav"/>
				</sound>
			</projectile>
			<splash value="true">
				<radius value="1"/>
				<damage-all value="true"/>
				<particle value="true" path="particle_splash.xml"/>
			</splash>
		</skill>

		<skill>
			<type value="die"/>
			<name value="die_skill"/>
			<ep-cost value="0"/>
			<speed value="120"/>
			<anim-speed value="120"/>
			<animation path="models/gryphon_dying.g3d"/>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/eagle_die1.wav"/>
				<sound-file path="sounds/eagle_die2.wav"/>
			</sound>
			<fade value="true"/>
		</skill>

		<skill>
			<type value="morph"/>
			<name value="morph_skill"/>
			<ep-cost value="0"/>
			<speed value="500"/>
			<anim-speed value="50"/>
			<animation path="models/gryphon_idle.g3d"/>
			<sound enabled="false"/>
		</skill>

	</skills>


	<commands>



		<command>
			<type value="stop"/>
			<name value="stop"/>
			<image path="../tree_of_life/images/stop.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>

		<command>
			<type value="move"/>
			<name value="move"/>
			<image path="../tree_of_life/images/move.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
		</command>


        <command>
			<type value="attack"/>
			<name value="attack"/>
			<image path="images/sky_attack.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<attack-skill value="attack_skill"/>
		</command>

        <command>
			<type value="attack"/>
			<name value="seige"/>
			<image path="images/siege_attack.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<attack-skill value="attack_ground_skill"/>
		</command>

		<command>
			<type value="attack_stopped"/>
			<name value="hold_position"/>
			<image path="../tree_of_life/images/hold.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
			<attack-skill value="attack_skill"/>
		</command>

		<command>
			<type value="morph"/>
			<name value="mount"/>
			<image path="images/gryphon.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<morph-skill value="morph_skill"/>
			<morph-unit name= "gryphon_rider"/>
			<discount value="0"/>
		</command>

	</commands>
</unit>
