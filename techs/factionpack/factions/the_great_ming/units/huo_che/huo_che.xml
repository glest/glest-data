<?xml version="1.0" standalone="no"?>

<unit>
	<parameters>
		<size value="1"/>
		<height value="3"/>
		<max-hp value="1000" regeneration="1"/>
		<max-ep value="0"/>
		<armor value="20"/>
		<armor-type value="leather"/>
		<sight value="15"/>
		<time value="120"/>
		<multi-selection value="true"/>
		<cellmap value="false"/>
		<levels>
			<level name="elite" kills="7"/>
		</levels>
		<fields>
			<field value="land"/>
		</fields>
		<properties>
			<property value="rotated_climb"/>
		</properties>
		<light enabled="false"/>
		<unit-requirements>

		</unit-requirements>
		<upgrade-requirements>
			<upgrade name="gunpowder"/>
		</upgrade-requirements>

		<resource-requirements>
			<resource name="wood" amount="150"/>
			<resource name="gold" amount="250"/>
			<resource name="food" amount="1"/>
		</resource-requirements>
		<resources-stored/>
		<image path="images/archer.bmp"/>
		<image-cancel path="images/tech_cancel.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="true">
			<sound path="sounds/ni_hao.ogg"/>


		</selection-sounds>
		<command-sounds enabled="true">
			<sound path="sounds/zai_jian.ogg"/>

		</command-sounds>
	</parameters>

	<skills>

		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>
			<ep-cost value="0"/>
			<speed value="1000"/>
			<anim-speed value="45"/>
			<animation path="../ji_bing/models/fire_cart_stand.g3d"/>
			<sound enabled="false"/>
		</skill>
		<skill>
			<type value="stop"/>
			<name value="show_range_skill"/>
			<ep-cost value="0"/>
			<speed value="200"/>
			<anim-speed value="200"/>
			<animation path="../ji_bing/models/fire_cart_stand.g3d"/>
			<particles value="true">
				<particle-file path="particle_range.xml">
					<shape value="conical">
						<angle value="90"/>
					</shape>
					<radius value="9"/>
					<min-radius value="8.9"/>
					<direction x="0" y="0.1" z="0"/>
					<offset x="0" y="0" z="0"/>
				</particle-file>
				<particle-file path="particle_sight.xml">
					<shape value="conical">
						<angle value="90"/>
					</shape>
					<radius value="15"/>
					<min-radius value="14.9"/>
					<direction x="0" y="0.1" z="0"/>
					<offset x="0" y="0" z="0"/>
				</particle-file>
			</particles>
			<sound enabled="false"/>
		</skill>
		<skill>
			<type value="stop"/>
			<name value="hold_stop_skill"/>
			<ep-cost value="0"/>
			<speed value="1000"/>
			<anim-speed value="10"/>
			<animation path="../ji_bing/models/fire_cart_ready.g3d"/>
			<sound enabled="false"/>
		</skill>
		<skill>
			<type value="move"/>
			<name value="move_skill"/>
			<ep-cost value="0"/>
			<speed value="180"/>
			<anim-speed value="125"/>
			<animation path="../ji_bing/models/fire_cart_move.g3d"/>
			<sound enabled="false"/>
		</skill>
		<skill>
			<type value="move"/>
			<name value="charge_skill"/>
			<ep-cost value="0"/>
			<speed value="215"/>
			<anim-speed value="135"/>
			<animation path="../ji_bing/models/fire_cart_move.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="attack"/>
			<name value="attack_skill"/>
			<ep-cost value="0"/>
			<speed value="60"/>
			<anim-speed value="60"/>
			<animation path="../ji_bing/models/fire_cart_fire.g3d"/>
			<sound enabled="false"/>
			<particles value="true" start-time="0.2" end-time="0.23">
				<particle-file path="flash.xml"/>
				<particle-file path="flash1.xml"/>
				<particle-file path="gunsmoke_particles.xml"/>
			</particles>
			<attack-strength value="250"/>
			<attack-var value="50"/>
			<attack-range value="9"/>
			<attack-type value="energy"/>
			<attack-start-time value="0.2"/>

			<attack-fields>
				<field value="land"/>
			</attack-fields>
			<projectile value="true">
				<particle value="true" path="particle_proj.xml"/>
				<sound enabled="true">
					<sound-file path="/sounds/msl_launch.wav"/>
					<sound-file path="/sounds/artillery_shells.ogg"/>
				</sound>
			</projectile>
			<splash value="true">
				<radius value="2"/>
				<damage-all value="true"/>
				<particle value="true" path="particle_splash.xml"/>
			</splash>
		</skill>

		<skill>
			<type value="die"/>
			<name value="die_skill"/>
			<ep-cost value="0"/>
			<speed value="60"/>
			<anim-speed value="60"/>
			<animation path="../ji_bing/models/fire_cart_die.g3d"/>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/archer_die1.wav"/>
				<sound-file path="sounds/archer_die2.wav"/>
				<sound-file path="sounds/archer_die3.wav"/>
				<sound-file path="sounds/archer_die4.wav"/>
			</sound>
			<fade value="false"/>
		</skill>


	</skills>

	<!-- *** commands *** -->

	<commands>

		<command>
			<type value= "stop"/>
			<name value="stop"/>
			<image path="images/tech_stop.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>

		<command>
			<type value="move"/>
			<name value="move"/>
			<image path="images/tech_move.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
		</command>

		<command>
			<type value="attack"/>
			<name value="fire_fire_dragon_arrows"/>
			<image path="images/archer_attack.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="charge_skill"/>
			<attack-skill value="attack_skill"/>
		</command>

		<command>
			<type value="attack_stopped"/>
			<name value="hold_position"/>
			<image path="images/tech_hold.bmp"/>
			<unit-requirements/>
			<upgrade-requirements>
				<upgrade name="advanced_training"/>
			</upgrade-requirements>
			<stop-skill value="hold_stop_skill"/>
			<attack-skill value="attack_skill"/>
		</command>

<command>
			<type value="stop"/>
			<name value="show_ranges"/>
			<image path="images/ranges.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="show_range_skill"/>
		</command>
	</commands>
</unit>
