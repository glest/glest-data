<?xml version="1.0" standalone="no"?>

<unit>

	<parameters>
		<size value="3"/>
		<height value="2"/>
		<max-hp value="500" regeneration="0"/>
		<max-ep value="0"/>
		<armor value="1"/>
		<armor-type value="wood"/>
		<sight value="12"/>
		<time value="50"/>
		<multi-selection value="true"/>
		<uniform-selection value="false"/>
		<cellmap value="true">
			<row value="010"/>
			<row value="010"/>
			<row value="010"/>
		</cellmap>
		<levels/>
		<fields>
			<field value="land" />
		</fields>
		<properties/>
		<light enabled="false"/>
		<unit-requirements>
			<unit name="trade_market"/>
		</unit-requirements>
		<upgrade-requirements/>
		<resource-requirements>
			<resource name="gold" amount="500"/>
		</resource-requirements>
		<resources-stored/>
		<image path="images/cart.png"/>
		<image-cancel path="../cancel.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="true">
			<sound path="sounds/horseman_select1.ogg"/>
			<sound path="sounds/select1.wav"/>
			<sound path="sounds/select2.wav"/>
		</selection-sounds>

		<command-sounds enabled="true">
			<sound path="sounds/react1.wav"/>
			<sound path="sounds/react2.wav"/>
			<sound path="sounds/horseman_select1.ogg"/>
		</command-sounds>
	</parameters>

	<skills>

		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>
			<ep-cost value="0"/>
			<speed value="1000"/>
			<anim-speed value="50"/>
			<animation path="models/tradecart_stand.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="move"/>
			<name value="move_skill"/>
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="120"/>
			<animation path="models/tradecart_move.g3d"/>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/horseman_walk1.ogg"/>
				<sound-file path="sounds/horseman_walk2.ogg"/>
				<sound-file path="sounds/horseman_walk3.ogg"/>
			</sound>

		</skill>

		<skill>
			<type value="die"/>
			<name value="die_skill"/>
			<ep-cost value="0"/>
			<speed value="60"/>
			<anim-speed value="60"/>
			<animation path="models/tradecart_die.g3d"/>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/machine_die1.ogg"/>
				<sound-file path="sounds/machine_die2.ogg"/>
			</sound>
			<fade value="false"/>
		</skill>

	</skills>

	<!-- *** commands *** -->

	<commands>

		<command>
			<type value="stop"/>
			<name value="stop"/>
			<image path="../stop.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>

		<command>
			<type value="move"/>
			<name value="move"/>
			<image path="../move.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
		</command>

	</commands>
</unit>
