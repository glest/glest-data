<?xml version="1.0" standalone="no"?>

<unit>

	<parameters>
		<size value="1"/>
		<height value="2"/>
		<max-hp value="700" regeneration="7"/>
		<max-ep value="1200" regeneration="20"/>
		<armor value="50"/>
		<armor-type value="leather"/>					
		<sight value="14"/>
		<time value="90"/>	
		<multi-selection value="true"/>	
		<cellmap value="false"/>
		<levels/>
		<fields>
			<field value="land"/>
		</fields>	
		<properties/>
		<light enabled="false"/>
		<unit-requirements>
		</unit-requirements>
		<upgrade-requirements>
			<upgrade name="soul_binding"/>
		</upgrade-requirements>
		<resource-requirements>
			<resource name="gold" amount="150"/>
			<resource name="wood" amount="75"/>
			<resource name="souls" amount="1"/>
		</resource-requirements>
		<resources-stored/>
		<image path="images/alliyp.bmp"/>
		<image-cancel path="../lich/images/dark_magic_cancel.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="true">
			<sound path="sounds/shade1.wav"/>
			<sound path="sounds/shade5.wav"/>
			<sound path="sounds/shade6.wav"/>
		</selection-sounds>
		<command-sounds enabled="true">
			<sound path="sounds/shade11.wav"/>
			<sound path="sounds/shade2.wav"/>
			<sound path="sounds/shade3.wav"/>
			<sound path="sounds/shade10.wav"/>
			<sound path="sounds/shade13.wav"/>
		</command-sounds>
	</parameters>

	<skills>
	
		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="1000"/>
			<anim-speed value="40"/>
			<animation path="models/standing.g3d"/>
			<particles value="true">
				<!--particle-file path="fire_particles.xml"/-->
				<particle-file path="smoke_particles.xml"/>
				<particle-file path="smoke_particles2.xml"/>
			</particles>
			<sound enabled="false"/>
		</skill>
		
		<skill>
			<type value="move"/>
			<name value="move_skill"/>		
			<ep-cost value="0"/>
			<speed value="180"/>
			<anim-speed value="70"/>
			<animation path="models/walking.g3d"/>
			<particles value="true">
				<!--particle-file path="fire_particles.xml"/-->
				<particle-file path="smoke_particles.xml"/>
				<particle-file path="smoke_particles2.xml"/>
			</particles>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="attack"/>
			<name value="attack_skill"/>		
			<ep-cost value="50"/>
			<speed value="200"/>
			<anim-speed value="200"/>
			<animation path="models/attacking.g3d"/>
			<particles value="true">
				<!--particle-file path="fire_particles.xml"/-->
				<particle-file path="smoke_particles.xml"/>
				<particle-file path="smoke_particles2.xml"/>
			</particles>
			<sound enabled="true" start-time="0.4">
				<sound-file path="sounds/shade14.wav"/>
				<sound-file path="sounds/shade15.wav"/>
				<sound-file path="sounds/shade4.wav"/>
			</sound>
			<attack-strenght value="150"/>
			<attack-var value="50"/>
			<attack-range value="10"/>
			<attack-type value="magic"/>
			<attack-fields>
				<field value="land"/>
				<field value="air"/>
			</attack-fields>
			<attack-start-time value="0"/>
			<projectiles>
				<projectile attack-start-time="0.45" damage-percentage="100">
					<particle path="particle_proj.xml"/>
					<hitsound enabled="false">
						<sound-file path="/sounds/firearrowhit1.wav"/>
						<sound-file path="/sounds/firearrowhit2.wav"/>
						<sound-file path="/sounds/firearrowhit3.wav"/>
						<sound-file path="/sounds/firearrowhit4.wav"/>
					</hitsound>
					<!--hitshake enabled="true" intensity="1000" duration="40" visible="true" in-camera-view="false" camera-distance-affected="false"/-->
				</projectile>
				<projectile attack-start-time="0.45" damage-percentage="0">
					<particle path="particle_ball.xml"/>
					<hitsound enabled="false">
						<sound-file path="/sounds/firearrowhit1.wav"/>
						<sound-file path="/sounds/firearrowhit2.wav"/>
						<sound-file path="/sounds/firearrowhit3.wav"/>
						<sound-file path="/sounds/firearrowhit4.wav"/>
					</hitsound>
					<!--hitshake enabled="true" intensity="1000" duration="40" visible="true" in-camera-view="false" camera-distance-affected="false"/-->
				</projectile>
			</projectiles>
			<splash value="true">
				<radius value="1"/>
				<damage-all value="true"/>
				<particle value="true" path="particle_splash.xml"/>
			</splash>
		</skill>

		<skill>
			<type value="die"/>
			<name value="die_skill"/>		
			<ep-cost value="0"/>
			<speed value="80"/>
			<anim-speed value="25"/>
			<animation path="models/dying.g3d"/>
			<particles value="true">
				<particle-file path="smoke_die_particles.xml"/>
			</particles>
			<sound enabled="true" start-time="0.3">
				<sound-file path="sounds/shade7.wav"/>
				<sound-file path="sounds/shade8.wav"/>
				<sound-file path="sounds/shade9.wav"/>
				<sound-file path="sounds/shade12.wav"/>
			</sound>			
			<fade value="false"/>
		</skill>

		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="1000"/>
			<anim-speed value="40"/>
			<animation path="models/standing.g3d"/>
			<sound enabled="false"/>			
		</skill>
	</skills>
	
	<commands>
		
		<command>
			<type value= "stop"/>
			<name value="stop"/>
			<image path="../lich/images/dark_magic_stop.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>

		<command>
			<type value= "move"/>
			<name value="move"/>
			<image path="../lich/images/dark_magic_move.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
		</command>

		<command>
			<type value= "attack"/>
			<name value="attack"/>
			<image path="images/attack.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<attack-skill value="attack_skill"/>
		</command>

    <command>
			<type value="attack_stopped"/>
			<name value="hold_position"/>
			<image path="../lich/images/dark_magic_hold.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
			<attack-skill value="attack_skill"/>
		</command>
	</commands>
</unit>
