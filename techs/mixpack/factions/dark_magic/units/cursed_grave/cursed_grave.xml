<?xml version="1.0" standalone="no"?>

<unit>
	<parameters>
		<size value="2"/>
		<height value="5"/>
		<max-hp value="3000" regeneration="10"/>
		<max-ep value="250" regeneration="1"/>
		<armor value="50"/>
		<armor-type value="stone"/>
		<sight value="16"/>
		<time value="140"/>
		<multi-selection value="true"/>
		<uniform-selection value="true"/>
		<cellmap value="false"/>
		<levels>
		</levels>
		<fields>
			<field value="land"/>
		</fields>
		<properties/>
		<light enabled="false"/>
		<unit-requirements>
			<unit name="necromancer"/>
		</unit-requirements>
		<upgrade-requirements>
			<upgrade name="soul_binding"/>
		</upgrade-requirements>
		<resource-requirements>
			<resource name="gold" amount="300"/>
			<resource name="stone" amount="500"/>
			<resource name="souls" amount="3"/>
		</resource-requirements>
		<resources-stored/>
		<image path="images/earth_serpent.bmp"/>
		<image-cancel path="../lich/images/dark_magic_cancel.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="false">
		</selection-sounds>
		<command-sounds enabled="false">
		</command-sounds>
	</parameters>

	<skills>
		<skill>
			<type value="be_built"/>
			<name value="be_built_skill"/>
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="40"/>
			<animation path="models/gravestone.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="50"/>
			<animation path="models/gravestone.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="attack"/>
			<name value="attack_skill"/>
			<ep-cost value="250"/>
			<speed value="75"/>
			<anim-speed value="60"/>
			<animation path="models/gravestone_attacking.g3d"/>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/attack1.wav"/>
				<sound-file path="sounds/attack2.wav"/>
			</sound>
			<attack-strenght value="20"/>
			<attack-var value="20"/>
			<attack-range value="10"/>
			<attack-type value="energy"/>
			<attack-start-time value="0.6"/>
			<attack-fields>
				<field value="land"/>
			</attack-fields>
			
			<projectiles>
				<projectile attack-start-time="0.6" damage-percentage="100">
					<particle path="particle_proj.xml"/>
					<hitsound enabled="true">
						<sound-file path="sounds/hit1.wav"/>
						<sound-file path="sounds/hit2.wav"/>
					</hitsound>
					<unit value="dark_essence" amount="1" spawnAtTarget="true"/>
				</projectile>
			</projectiles>
			<splash value="true">
				<radius value="2"/>
				<damage-all value="true"/>
				<particle value="true" path="particle_splash.xml"/>
			</splash>
		</skill>

		<skill>
			<type value="die"/>
			<name value="die_skill"/>
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="300"/>
			<animation path="models/gravestone_destruction.g3d"/>
			<sound enabled="true" start-time="0">
				<sound-file path="../blood_fountain/sounds/dark_magic_building_fall5.wav"/>
			</sound>
			<fade value="false"/>
		</skill>
	</skills>

	<commands>
		<command>
			<type value="stop"/>
			<name value="stop"/>
			<image path="../lich/images/dark_magic_stop.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>

		<command>
			<type value="attack_stopped"/>
			<name value="attack_on"/>
			<image path="images/attack_on.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
			<attack-skill value="attack_skill"/>
		</command>
	</commands>
</unit>
